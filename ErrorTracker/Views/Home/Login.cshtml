@model ErrorTracker.UserProfile

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
        .btn-primary:hover,
        .btn-primary:active,
        .btn-primary.active,
        .btn-primary:focus {
            color: #ffffff;
            background-color: #00BCD4 !important;
            border-color: #285e8e !important;
        }

        .btn-primary {
            background-color: blue;
            border-color: #00BCD4;
        }

        ul.nav a:hover {
            background-color: #00BCD4 !important;
        }
    </style>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Login</h4></div>
        <div class="panel-body">
            <div style="text-align:center;padding-bottom:10px">
                <image src="~/images/RCMTLogo.jpg" height="160px" width="600px" />
            </div>

            <div style="width:30%;margin: 0 auto;">
                @using (Html.BeginForm())
            {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label for="email">UserName:</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control", Type = "password" })
                    </div>
                    <div style="padding-bottom:.2in">
                        <input class="btn btn-primary" type="submit" style="font-weight:bold" value="Submit" />
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>